@using BlazorComponents.Client
@using BlazorComponents.Shared
@using Microsoft.JSInterop


<wc-form-element data-element-type="@DesignNode.WidgetTypeCode">
    @if (DesignNode.WidgetTypeCode == "ConfiguratorRow")
    {
        <FormRow DesignNode=@DesignNode Dispatcher=@Dispatcher ConfiguratorRegistry=@ConfiguratorRegistry/>
    }

    @if (DesignNode.WidgetTypeCode == "ConfiguratorElement")
    {
        <ConfiguratorActivator DesignNode=@DesignNode Dispatcher=@Dispatcher ConfiguratorRegistry=@ConfiguratorRegistry/>
    }
</wc-form-element>

@functions {
    [Parameter]
    public StructureNode DesignNode { get; set; } // Demonstrates how a parent component can supply parameters

    [Parameter]
    public FormEventDispatcher Dispatcher { get; set; }

    [Parameter]
    public ConfiguratorRegistry ConfiguratorRegistry { get; set; }
}
